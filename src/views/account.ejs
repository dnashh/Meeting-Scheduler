<%- include('partials/header', { user }) %> 
<article class="p-2">
    <br>
    <h1 class="text-center text-3xl font-bold">
        Manage Your Preferences 
    </h1>
    <br>
    <form class="flex flex-col gap-3 max-w-sm mx-auto" method="post">
        <%- include('partials/timezone', { account } ) %> 
        <div class="flex flex-col gap-2">
            <label for="name">Choose Timeslots</label>
            <input class="border-2 p-3 border-gray-300" type="time" name="start" id="start" value="<%= account.timeslots.start %>">
            <input class="border-2 p-3 border-gray-300" type="time" name="end" id="end" value="<%= account.timeslots.end %>">
        </div>
        <label>Choose Repeat</label>
        <div class="flex gap-2 justify-evenly">
            <input class="w-[20px]" type="checkbox" name="repeat" id="sunday" value="0" <%= ( account.repeat.includes('0')) ? "checked" : "" %> >
            <input class="w-[20px]" type="checkbox" name="repeat" id="monday" value="1" <%= ( account.repeat.includes('1')) ? "checked" : "" %>>
            <input class="w-[20px]" type="checkbox" name="repeat" id="tuesday" value="2" <%= ( account.repeat.includes('2')) ? "checked" : "" %>>
            <input class="w-[20px]" type="checkbox" name="repeat" id="wednesday" value="3" <%= ( account.repeat.includes('3')) ? "checked" : "" %>>
            <input class="w-[20px]" type="checkbox" name="repeat" id="thursday" value="4" <%= ( account.repeat.includes('4')) ? "checked" : "" %> >
            <input class="w-[20px]" type="checkbox" name="repeat" id="friday" value="5" <%= ( account.repeat.includes('5')) ? "checked" : "" %>>
            <input class="w-[20px]" type="checkbox" name="repeat" id="saturday" value="6" <%= ( account.repeat.includes('6')) ? "checked" : "" %>>
        </div>
        <div class="flex gap-2 justify-evenly">
            <label for="sunday">Su</label>
            <label for="monday">M</label>
            <label for="tuesday">Tu</label>
            <label for="wednesday">W</label>
            <label for="thursday">Th</label>
            <label for="friday">F</label>
            <label for="saturday">Sa</label>
        </div>
        <br>
        <button class="border-2 border-black bg-yellow-300 p-4 font-bold" type="submit">Update Preferences</button>
    </form>
</article>
<%- include('partials/footer') %> 
